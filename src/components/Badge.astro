---
// Original code: https://github.com/jktrn/enscribe.dev/blob/main/src/components/Badge.astro
import { Badge as BadgeComponent } from '@/components/ui/badge'
import { cn } from '@/lib/utils'
import { Icon } from 'astro-icon/components'

interface Props {
  variant?: 'default' | 'muted' | 'destructive' | 'outline'
  className?: string
  children?: any
  text?: string
  showIcon?: boolean
}

const {
  variant = 'muted',
  className = '',
  children,
  text,
  showIcon = true,
} = Astro.props

const categoryMappings = [
  {
    keywords: ['crypto'],
    style: {
      color: 'bg-yellow-900 text-yellow-100 dark:bg-yellow-900 dark:text-yellow-50',
      icon: 'lucide:key',
    },
  },
  {
    keywords: ['web'],
    style: {
      color: 'bg-blue-900 text-blue-100 dark:bg-blue-900 dark:text-blue-50',
      icon: 'lucide:globe',
    },
  },
  {
    keywords: ['reverse', 'rev'],
    style: {
      color: 'bg-orange-900 text-orange-100 dark:bg-orange-900 dark:text-orange-50',
      icon: 'lucide:rotate-ccw',
    },
  },
  {
    keywords: ['pwn', 'binary exploitation'],
    style: {
      color: 'bg-red-900 text-red-100 dark:bg-red-900 dark:text-red-50',
      icon: 'lucide:zap',
    },
  },
  {
    keywords: ['misc'],
    style: {
      color: 'bg-stone-900 text-stone-100 dark:bg-stone-900 dark:text-stone-50',
      icon: 'lucide:puzzle',
    },
  },
  {
    keywords: ['forensic'],
    style: {
      color: 'bg-green-900 text-green-100 dark:bg-green-900 dark:text-green-50',
      icon: 'lucide:search',
    },
  },
  {
    keywords: ['osu!'],
    style: {
      color: 'bg-pink-900 text-pink-100 dark:bg-pink-900 dark:text-pink-50',
      icon: 'lucide:gamepad',
    },
  },
  {
    keywords: ['osint'],
    style: {
      color: 'bg-purple-900 text-purple-100 dark:bg-purple-900 dark:text-purple-50',
      icon: 'lucide:eye',
    },
  },
  {
    keywords: ['blockchain'],
    style: {
      color: 'bg-teal-900 text-teal-100 dark:bg-teal-900 dark:text-teal-50',
      icon: 'lucide:link',
    },
  },
  {
    keywords: ['ppc', 'programming'],
    style: {
      color: 'bg-indigo-900 text-indigo-100 dark:bg-indigo-900 dark:text-indigo-50',
      icon: 'lucide:code',
    },
  },
  {
    keywords: ['irl'],
    style: {
      color: 'bg-sky-900 text-sky-100 dark:bg-sky-900 dark:text-sky-50',
      icon: 'lucide:user',
    },
  },
  {
    keywords: ['open-source'],
    style: {
      color: 'bg-emerald-900 text-emerald-100 dark:bg-emerald-900 dark:text-emerald-50',
      icon: 'lucide:git-branch',
    },
  },
  {
    keywords: ['15 minutes', '15m'],
    style: {
      color: 'bg-red-900 text-red-100 dark:bg-red-900 dark:text-red-50',
      icon: 'lucide:timer',
    },
  },
  {
    keywords: ['no instancer'],
    style: {
      color: 'bg-green-900 text-green-100 dark:bg-green-900 dark:text-green-50',
      icon: 'lucide:smile',
    },
  },
  {
    keywords: ['yes', 'y'],
    style: {
      color: 'bg-green-900 text-green-100 dark:bg-green-900 dark:text-green-50',
      icon: 'lucide:check',
    },
  },
  {
    keywords: ['no', 'n'],
    style: {
      color: 'bg-red-900 text-red-100 dark:bg-red-900 dark:text-red-50',
      icon: 'lucide:x',
    },
  },
]

const getCategoryStyle = (content: string) => {
  const lowerContent = content.toLowerCase()

  const match = categoryMappings.find((category) =>
    category.keywords.some((keyword) => lowerContent.includes(keyword)),
  )

  return match?.style || null
}

const content = text || (typeof children === 'string' ? children : '')
const categoryStyle = getCategoryStyle(content)
---

<BadgeComponent
  variant={categoryStyle ? 'muted' : variant}
  className={cn(categoryStyle?.color, className)}
  client:load
>
  {
    showIcon && (
      <Icon
        name={categoryStyle ? categoryStyle.icon : 'lucide:hash'}
        class="size-3"
      />
    )
  }
  <slot>{text}</slot>
</BadgeComponent>